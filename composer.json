{
    "name": "khmer-pdf/laravel-kh-pdf",
    "type": "package",
    "description": "A simple Laravel package for supporting Khmer font in PDFs using mPdf.",
    "keywords": [
        "pdf",
        "package",
        "mPdf",
        "laravel",
        "laravel pdf khmer",
        "khmer",
        "khmer pdf"
    ],
    "license": "MIT",
    "homepage": "https://github.com/Duch-Nuon/laravel-kh-pdf", 
    "autoload": {
        "psr-4": {
            "KhmerPdf\\LaravelKhPdf\\": "src/",
            "KhmerPdf\\LaravelKhPdf\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "mpdf/mpdf": "^8.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "KhmerPdf\\LaravelKhPdf\\Providers\\PdfKhServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "nuon",
            "email": "duchnuon@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/testbench": "^10.8",
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
